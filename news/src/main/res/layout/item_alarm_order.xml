<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_10"
    android:layout_marginBottom="@dimen/margin_10"
    android:paddingLeft="@dimen/margin_20"
    android:paddingRight="@dimen/margin_20"
    android:background="@drawable/card_shape"
    android:orientation="vertical">

<!--报障编号-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
   >

    <TextView
        style="@style/font_b_size_3"
        android:id="@+id/item_tv_order_num_title"
        android:singleLine="true"
        android:paddingLeft="@dimen/margin_3"
        android:text="单据编号:" />

    <TextView
        android:id="@+id/item_tv_order_number"
        style="@style/font_b_size_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="qq" />

</LinearLayout>


<!--故障说明-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:orientation="horizontal">

    <TextView
        style="@style/font_b_size_4"
        android:singleLine="true"
        android:id="@+id/item_tv_order_address"
        android:paddingLeft="@dimen/margin_3"
        android:text="报警地址:" />

    <TextView
        android:id="@+id/item_tv_order_address_content"
        style="@style/font_b_size_4"
        android:layout_marginLeft="20dp"
        android:singleLine="true"
        android:text="北京邮电大学" />

</LinearLayout>


<!--故障网点-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <TextView
        style="@style/font_b_size_4"
        android:singleLine="true"
        android:id="@+id/item_tv_order_emergency"
        android:paddingLeft="@dimen/margin_3"
        android:text="紧急程度:" />

    <TextView
        android:id="@+id/item_tv_order_emergency_type"
        style="@style/font_b_size_4"
        android:layout_marginLeft="20dp"
        android:singleLine="true"
        android:text="紧急" />

</LinearLayout>


<!--工单号-->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_iv_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_1"
        android:src="@drawable/ic_order_green"
        android:layout_toLeftOf="@+id/item_tv_order_status" />

    <TextView
        android:id="@+id/item_tv_order_status"
        style="@style/font_b_size_4"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:text="已接单" />

</RelativeLayout>


</LinearLayout>