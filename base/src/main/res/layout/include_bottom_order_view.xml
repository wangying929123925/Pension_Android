<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_60"
    android:paddingLeft="@dimen/margin_5"
    android:paddingRight="@dimen/margin_5"
    android:background="@drawable/card_shape"
   >

        <RelativeLayout
            android:id="@+id/fault_left_one_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@color/h_main_color"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:visibility="invisible">
            <TextView
                android:id="@+id/include_bot_demand_fault_left_one"
                style="@style/choose_btn"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="左一"
                android:paddingLeft="@dimen/margin_8"
                android:paddingRight="@dimen/margin_8"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/left_two_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/h_main_color"
            android:layout_toRightOf="@+id/fault_left_one_shadow"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:visibility="invisible">
            <TextView
                android:id="@+id/include_bot_demand_left_two"
                style="@style/choose_btn"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="左二"
                android:paddingLeft="@dimen/margin_8"
                android:paddingRight="@dimen/margin_8"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <!--右二-->
        <RelativeLayout
            android:id="@+id/right_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/right_parent_shadow"
            android:background="@color/h_main_color"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:visibility="invisible">
            <TextView
                android:id="@+id/include_bot_demand_right"
                style="@style/choose_btn"
                android:gravity="center"
                android:text="右二"
                android:paddingLeft="@dimen/margin_8"
                android:paddingRight="@dimen/margin_8"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <!--右一-->
        <RelativeLayout
            android:id="@+id/right_parent_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@color/h_main_color"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:visibility="visible">
            <TextView
                android:id="@+id/include_bot_demand_parent_right"
                style="@style/choose_btn"
                android:gravity="center"
                android:text="右一"
                android:paddingLeft="@dimen/margin_8"
                android:paddingRight="@dimen/margin_8"
                android:textColor="@color/white"/>
        </RelativeLayout>

</RelativeLayout>